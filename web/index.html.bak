    <script>
        let characteristic;
        let isConnected = false;
        let lastSendTime = 0;
        const SEND_INTERVAL = 100; // ã‚³ãƒãƒ³ãƒ‰é€ä¿¡é–“éš”ï¼ˆmsï¼‰

        async function connect() {
            try {
                updateStatus("BLEãƒ‡ãƒã‚¤ã‚¹ã‚’æ¤œç´¢ä¸­...");

                const device = await navigator.bluetooth.requestDevice({
                    filters: [{ namePrefix: "InfinityMirror" }],
                    optionalServices: ["12345678-1234-1234-1234-1234567890ab"]
                });

                updateStatus("ãƒ‡ãƒã‚¤ã‚¹ã«æ¥ç¶šä¸­...");
                const server = await device.gatt.connect();

                updateStatus("ã‚µãƒ¼ãƒ“ã‚¹ã‚’å–å¾—ä¸­...");
                const service = await server.getPrimaryService("12345678-1234-1234-1234-1234567890ab");

                updateStatus("ã‚­ãƒ£ãƒ©ã‚¯ã‚¿ãƒªã‚¹ãƒ†ã‚£ãƒƒã‚¯ã‚’å–å¾—ä¸­...");
                characteristic = await service.getCharacteristic("abcd1234-5678-90ab-cdef-1234567890ab");

                isConnected = true;
                updateStatus("âœ… æ¥ç¶šå®Œäº†ï¼LEDãƒ‘ã‚¿ãƒ¼ãƒ³ã‚’é¸æŠã—ã¦ãã ã•ã„");

                // æ¥ç¶šãŒåˆ‡æ–­ã•ã‚ŒãŸæ™‚ã®å‡¦ç†
                device.addEventListener('gattserverdisconnected', () => {
                    isConnected = false;
                    characteristic = null;
                    updateStatus("âŒ ãƒ‡ãƒã‚¤ã‚¹ã¨ã®æ¥ç¶šãŒåˆ‡æ–­ã•ã‚Œã¾ã—ãŸ");
                });

            } catch (error) {
                console.error('BLEæ¥ç¶šã‚¨ãƒ©ãƒ¼:', error);
                updateStatus("âŒ æ¥ç¶šã«å¤±æ•—ã—ã¾ã—ãŸ: " + error.message);
            }
        }

        async function sendCommand(cmd, btnElement) {
            try {
                if (!characteristic) {
                    updateStatus("å…ˆã«BLEæ¥ç¶šã‚’è¡Œã£ã¦ãã ã•ã„");
                    return;
                }

                updateStatus(`ã‚³ãƒãƒ³ãƒ‰é€ä¿¡ä¸­: ${cmd}`);
                await characteristic.writeValueWithResponse(new TextEncoder().encode(cmd));
                updateStatus(`âœ… ã‚³ãƒãƒ³ãƒ‰é€ä¿¡å®Œäº†: ${cmd}`);

                // ãƒœã‚¿ãƒ³ã®ãƒã‚¤ãƒ©ã‚¤ãƒˆå‡¦ç†
                if (btnElement) {
                    document.querySelectorAll('.mode-button').forEach(b => b.classList.remove('active'));
                    btnElement.classList.add('active');
                }

            } catch (error) {
                console.error('ã‚³ãƒãƒ³ãƒ‰é€ä¿¡ã‚¨ãƒ©ãƒ¼:', error);
                updateStatus("âŒ ã‚³ãƒãƒ³ãƒ‰é€ä¿¡ã«å¤±æ•—ã—ã¾ã—ãŸ: " + error.message);
            }
        }

        // ã‚¹ãƒ­ãƒƒãƒˆãƒªãƒ³ã‚°ä»˜ãã‚³ãƒãƒ³ãƒ‰é€ä¿¡ï¼ˆã‚¹ãƒ©ã‚¤ãƒ€ãƒ¼ç”¨ï¼‰
        async function sendThrottledCommand(cmd) {
            const now = Date.now();
            if (now - lastSendTime < SEND_INTERVAL) return;

            lastSendTime = now;
            try {
                if (characteristic) {
                    await characteristic.writeValueWithResponse(new TextEncoder().encode(cmd));
                }
            } catch (error) {
                console.error('ã‚³ãƒãƒ³ãƒ‰é€ä¿¡ã‚¨ãƒ©ãƒ¼:', error);
            }
        }

        function updateBrightness(val) {
            document.getElementById('brightnessValue').textContent = val + '%';
            sendThrottledCommand(`BRIGHTNESS:${val}`);
        }

        function updateSpeed(val) {
            document.getElementById('speedValue').textContent = val + '%';
            sendThrottledCommand(`SPEED:${val}`);
        }

        function updateColor(hex) {
            // HEX to RGB
            const r = parseInt(hex.substr(1, 2), 16);
            const g = parseInt(hex.substr(3, 2), 16);
            const b = parseInt(hex.substr(5, 2), 16);

            const cmd = `COLOR:${r},${g},${b}`;
            sendCommand(cmd); // è‰²å¤‰æ›´ã¯å³æ™‚åæ˜ ã—ãŸã„ã®ã§é€šå¸¸ã®sendCommandã‚’ä½¿ç”¨
        }

        function updateStatus(message) {
            document.getElementById('status').textContent = message;
        }

        // ãƒšãƒ¼ã‚¸èª­ã¿è¾¼ã¿æ™‚ã®åˆæœŸåŒ–
        window.addEventListener('load', () => {
